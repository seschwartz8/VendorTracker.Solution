@using VendorTracker.Models
@{
  Layout = "_Layout";
}

<h1>Your Vendors</h1>

<div class="vendors-container">
  @if (Model.Count == 0)
  {
    <h4>You have no vendors!</h4>
  }

  @foreach (Vendor vendor in Model)
  {
    <a href="/vendors/@vendor.Id">@vendor.Name</a>
  }
</div>

<div class="links">
  <a href="/vendors/new">Add New Vendor</a>
  <a href="/vendors/deleteAll">Delete All Vendors</a>
  <a href="/">Back To Home</a>
</div>


